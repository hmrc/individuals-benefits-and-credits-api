{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Individual matching request",
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "type": "object",
          "description": "The URI for this endpoint.",
          "properties": {
            "href": {
              "type": "string",
              "description": "The URL of the endpoint.",
              "example": "/individuals/working-tax-credit/?matchId=57072660-1df9-4aeb-b4ea-cd2d7f96e430"
            }
          }
        }
      },
      "required": ["self"]
    },
    "applications": {
      "description": "The applications that are active during the date range requested",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": "123"
          },
          "awards": {
            "type": "array",
            "description": "The awards that were active for this application during the time period",
            "items": {
              "type": "object",
              "properties": {
                "payProfCalcDate": {
                  "type": "string",
                  "description": "Payment Profile Calculated Date",
                  "example": "1996-08-01"
                },
                "totalEntitlement": {
                  "type": "number",
                  "description": "The sum of all the award entitlements for an award version; the net amount the entitlement unit will receive",
                  "example": "18765.23"
                },
                "workingTaxCredit": {
                  "type": "object",
                  "description": "Working Tax Credit (WTC) amounts",
                  "properties": {
                    "amount": {
                      "type": "number",
                      "description": "Working Tax Credit element of the overall entitlement (totalEntitlement)",
                      "example": "930.98"
                    },
                    "paidYTD": {
                      "type": "number",
                      "description": "The actual amount of payment out both PVE and direct, from the start of the tax credit period up to the calculated date of the payment profile. Will be returned for the payee only.",
                      "example": "8976.34"
                    }
                  }
                },
                "childTaxCredit": {
                  "type": "object",
                  "description": "Child Tax Credit (CTC) amounts",
                  "properties": {
                    "childCareAmount": {
                      "type": "number",
                      "description": "Amount for childcare",
                      "example": "930.98"
                    }
                  }
                },
                "payments": {
                  "type": "array",
                  "description": "All payments made to the individual during the time period. If no payments to this individual an empty array will be returned.",
                  "items": {
                    "type": "object",
                    "properties": {
                      "startDate": {
                        "type": "string",
                        "description": "Start Date of the payment.",
                        "example": "1996-08-01"
                      },
                      "endDate": {
                        "type": "string",
                        "description": "End Date of the payment.",
                        "example": "1996-08-07"
                      },
                      "frequency": {
                        "type": "integer",
                        "description": "The number of days between payments. Currently supported values are 1, 7, 14, and 28",
                        "example": "7"
                      },
                      "tcType": {
                        "type": "string",
                        "description": "The type of tax credit. Currently supported values are ETC and ICC",
                        "example": "ETC"
                      },
                      "amount": {
                        "type": "number",
                        "description": "The amount to be paid to recipient",
                        "example": "76.34"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "_links",
    "applications"
  ]
}